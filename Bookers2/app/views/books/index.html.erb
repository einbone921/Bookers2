<h2>User info</h2>
<p><%= image_tag('sample-author1.jpg') %></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th>ログインユーザー名</th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>ログインユーザーの紹介</th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <%= render 'layouts/error_messages', model: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h1>Books</h1>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


