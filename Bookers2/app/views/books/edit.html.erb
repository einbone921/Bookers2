<h1>Editing Book</h1>
<%= render 'layouts/error_messages', model: @book %>
<%= form_with model:@book, local:true do |f| %>
  <h4>Tilte</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
<% end %>
<span><%= link_to 'Show', book_path(@book) %></span>
<span><%= link_to 'Back', books_path %></span>

