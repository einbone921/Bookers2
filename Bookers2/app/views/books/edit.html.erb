<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>Editing Book</h1>
      <%= render 'layouts/error_messages', model: @book %>
      <div>
        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
            <div>
              <label for="book_title">Tilte</label>
            </div>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <div>
              <label for="book_body">Opinion</label>
            </div>
            <%= f.text_area :body %>
          </div>
          <div>
            <%= f.submit 'Update Book', class: 'btn btn-success' %>
          </div>
        <% end %>
        <span><%= link_to 'Show', book_path(@book) %></span>
        <span><%= link_to 'Back', books_path %></span>
      </div>
    </div>
  </div>
</div>