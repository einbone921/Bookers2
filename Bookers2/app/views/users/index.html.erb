<h2>User info</h2>
<p><%= image_tag('sample-author1.jpg') %></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <%= render 'layouts/error_messages', model: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<li>
  <%= link_to "プロフィール編集", edit_user_path(current_user.id) %>
</li>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.profile_image_id %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>