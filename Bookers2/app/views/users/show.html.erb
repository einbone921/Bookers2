<p id= "notice" >
  <%= notice %>

<h1>プロフィール詳細ページ</h1>

<h2>User info</h2>
<p><%= image_tag('sample-author1.jpg') %></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th>ログインユーザー名</th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>ログインユーザーの紹介</th>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <%= render 'layouts/error_messages', model: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
